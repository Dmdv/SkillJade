  </system.web>
  <system.serviceModel>
    <services>
      <service name="MediaRepositoryWebRole.MediaRepositoryService" behaviorConfiguration="ServiceBehavior">
        
        <endpoint address="UserManager"
                  behaviorConfiguration="RestBehavior"
                  binding="webHttpBinding"
                  bindingConfiguration="WebHttpBinding"
                  contract="MediaRepositoryWebRole.Contracts.IUserManager" />
        
        <endpoint address="AnswerManager"
                  behaviorConfiguration="RestBehavior"
                  binding="webHttpBinding"
                  bindingConfiguration="WebHttpBinding"
                  contract="MediaRepositoryWebRole.Contracts.IAnswerManager" />

        <endpoint address="AutorManager"
                  behaviorConfiguration="RestBehavior"
                  binding="webHttpBinding"
                  bindingConfiguration="WebHttpBinding"
                  contract="MediaRepositoryWebRole.Contracts.IAutorManager" />

        <endpoint address="QuestionManager"
                  behaviorConfiguration="RestBehavior"
                  binding="webHttpBinding"
                  bindingConfiguration="WebHttpBinding"
                  contract="MediaRepositoryWebRole.Contracts.IQuestionManager" />
        
        <endpoint address="ResultManager"
                  behaviorConfiguration="RestBehavior"
                  binding="webHttpBinding"
                  bindingConfiguration="WebHttpBinding"
                  contract="MediaRepositoryWebRole.Contracts.IResultManager" />
        
        <endpoint address="TestManager"
                  behaviorConfiguration="RestBehavior"
                  binding="webHttpBinding"
                  bindingConfiguration="WebHttpBinding"
                  contract="MediaRepositoryWebRole.Contracts.ITestManager" />
        
        <endpoint address="MediaRepositoryService"
                  behaviorConfiguration="RestBehavior"
                  binding="webHttpBinding" 
                  bindingConfiguration="WebHttpBinding" 
                  contract="MediaRepositoryWebRole.Contracts.IMediaRepositoryService" />
        
        <endpoint address="mex"
                  binding="mexHttpBinding"
                  contract="IMetadataExchange"/>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost/Repository/Service.svc" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <bindings>
      <webHttpBinding>
        <binding name="WebHttpBinding" 
                 transferMode="Streamed" 
                 maxReceivedMessageSize="2147483647" 
                 receiveTimeout="00:5:00" 
                 maxBufferPoolSize="2147483647" />
      </webHttpBinding>
      
      <basicHttpBinding>
        <binding name="BasicHttpBinding" 
                 transferMode="Streamed" 
                 maxReceivedMessageSize="2147483647" 
                 receiveTimeout="00:5:00" 
                 maxBufferPoolSize="2147483647" />
      </basicHttpBinding>
    </bindings>
    <behaviors>
      <endpointBehaviors>
        <behavior name="RestBehavior">
          <webHttp />
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="ServiceBehavior">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true" />
    <directoryBrowse enabled="true" />
  </system.webServer>
</configuration>